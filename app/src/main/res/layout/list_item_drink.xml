<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mDrink"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/strDrinkThumb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_gradient">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/strDrinkThumb"
            android:layout_alignBottom="@id/strDrinkThumb"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/strDrink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_black"
                android:textColor="@color/white"
                android:textSize="14sp">

            </TextView>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>